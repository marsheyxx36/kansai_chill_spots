<% if user_signed_in? %>
  <% if current_user.liked_by?(@post.id) %>
    <%= link_to destroy_like_path(@post.id, current_user.likes.find_by(post_id: @post.id).id), method: :delete ,remote:true do %>
      <p class="like-button"><i class="fas fa-heart fa-lg" style="color: #e82a2a;"></i><span class="like_count"><%= @post.likes.count %>チルいいね</span></p>
    <% end %>
  <% else %>
    <%= link_to create_like_path(@post.id), method: :post ,remote:true do %>
      <p class="like-button"><i class="far fa-heart fa-lg" style="color: #e82a2a;"></i><span class="like_count"><%= @post.likes.count %>チルいいね</span></p>
    <% end %>
  <% end %>
<% end %>