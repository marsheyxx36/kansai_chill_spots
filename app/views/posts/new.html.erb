<div class="container">
<div class="form-style-6 mt-5 user-form">
<h2>スポット投稿</h2>
<%= form_with(model: @post, local: true) do |f| %>
   <div class="field mt-5">
    <%= f.label :name ,"スポット名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
   </div>


   <div class="field mt-5">
        <%= f.label :description ,"スポットの説明"%>
        <%= f.text_field :description, autofocus: true, autocomplete: "description" %>
   </div>


   <div class="field mt-5">
        <%= f.label :address,"スポットの住所" %>
        <%= f.text_field :address, id:"address" , value: "" %>
   </div>

        <%= f.hidden_field :latitude, id:"latitude" , value: "" %>
        <%= f.hidden_field :longitude, id:"longitude" , value: "" %>


    <input type="button" value="検索" onclick="codeAddress()">

<!-- 下の1行を追加 -->
<div id="display"></div>

<div id='map'></div>

   <div class="field mt-5">
        <%= f.label :image,"スポットの画像" %> <br>
        <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
   </div>

  <div class="actions mt-5">
    <%= f.submit "投稿" %>
  </div>
  </div>
<% end %>


<style>
#map {
  height: 300px;
  width: 400px;
}
</style>

<script>
let map
let geocoder
// 下の1行を追加 
const display = document.getElementById('display')

function initMap(){
  geocoder = new google.maps.Geocoder()

  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat:35.68123620000001, lng:139.7671248},
    zoom: 12,
  });

  marker = new google.maps.Marker({
    position:{lat:35.68123620000001, lng:139.7671248},
    map: map
  });
}

function codeAddress(){
  let inputAddress = document.getElementById('address').value;

  geocoder.geocode( { 'address': inputAddress}, function(results, status) {
    if (status == 'OK') {
      map.setCenter(results[0].geometry.location);
      var marker = new google.maps.Marker({
          map: map,
          position: results[0].geometry.location
      });
      // 下の1行を追加 
      display.textContent = "検索結果：" + results[ 0 ].geometry.location
      let location = results[ 0 ].geometry.location
      var lat = location.lat();
      var lng = location.lng();    
      document.getElementById( "latitude" ).value = lat
       document.getElementById( "longitude" ).value = lng
  
    } else {
      alert('該当する結果がありませんでした：' + status);
    }
  });   
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLE_MAP_API_KEY']%>&callback=initMap" async defer></script>