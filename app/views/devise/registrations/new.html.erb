<div class="container">
<div class="form-style-6 mt-5 user-form">
<h2>新規登録</h2>

<%= button_to  user_facebook_omniauth_authorize_path,class:'btn type09', method: :post do %>
  <i class="fab fa-facebook-square fa-2x mr-3"></i><span class="sns_login">Facebookで登録</span>
<% end %>
<%= button_to  user_google_oauth2_omniauth_authorize_path,class:'btn type08 mb-4', method: :post do %>
  <i class="fab fa-google fa-2x mr-4"></i><span class="sns_login">Googleで登録</span>
<% end %>

  
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 
  <div class="field mt-5">
    <%= f.label :email ,"メールアドレス(必須)"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
<p style="color: red;"><%= resource.errors.full_messages_for(:email).first %>

  <div class="field mt-5">
   <%if @sns_id.present? %>
      <%= hidden_field_tag :sns_auth, true %>
 <% else %>
    <%= f.label :password ,"パスワード(必須)"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上の半角英数字で入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <p style="color: red;"><%= resource.errors.full_messages_for(:password).first %>

  <div class="field mt-5">
    <%= f.label :password_confirmation,"確認のためパスワードをもう一度入力してください(必須)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <p style="color: red;"><%= resource.errors.full_messages_for(:password_confirmation).first %>
 <% end %>
   <div class="field mt-5">
        <%= f.label :nickname,"ニックネーム(必須)" %>
        <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
      </div>
   <p style="color: red;"><%= resource.errors.full_messages_for(:nickname).first %>
   <div class="field mt-5">
        <%= f.label :image,"プロフィール画像" %> <br>
        <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
   </div>


 <div class="field mt-5">
        <%= f.label :profile%>
        <%= f.text_area :profile, autofocus: true %>
      </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

  </div>

  
<% end %>

